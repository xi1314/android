<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:background = "@drawable/shape_video_view_bg"
    android:minHeight = "96dp"
    android:minWidth = "96dp"
    android:orientation = "vertical">

    <LinearLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerInParent = "true"
        android:layout_margin = "8dp"
        android:orientation = "vertical">

        <ImageView
            android:id = "@+id/media_controller_view_icon"
            android:layout_width = "64dp"
            android:layout_height = "64dp"
            android:layout_gravity = "center_horizontal"
            android:scaleType = "fitXY"
            android:src = "@drawable/icon_volume" />

        <studio.archangel.toolkitv2.views.AngelProgressBarHorizontal
            android:id = "@+id/media_controller_view_pb"
            android:layout_width = "70dp"
            android:layout_height = "2dp"
            android:layout_marginTop = "8dp" />
    </LinearLayout>
</RelativeLayout>