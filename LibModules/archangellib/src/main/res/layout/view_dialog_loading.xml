<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent">
    <!--<RelativeLayout-->
    <!--android:id = "@+id/dialog_progress_mask"-->
    <!--android:layout_width = "match_parent"-->
    <!--android:layout_height = "match_parent"-->
    <!--android:background = "@color/trans_25"-->
    <!--android:padding = "24dp">-->
    <LinearLayout
        android:id = "@+id/dialog_progress_pb_layout"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom = "80dp"
        android:layout_marginTop = "80dp"
        android:background = "@drawable/p_dialog"
        android:orientation = "vertical"
        android:padding = "32dp">

        <studio.archangel.toolkitv2.views.AngelProgressBarHorizontal
            android:id = "@+id/dialog_progress_pb"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content" />

        <TextView
            android:id = "@+id/dialog_progress_content"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "8dp"
            android:gravity = "center_vertical"
            android:text = "正在上传..."
            android:textColor = "@color/text_black" />
    </LinearLayout>
    <!--</RelativeLayout>-->
    <studio.archangel.toolkitv2.views.AngelProgressCircle
        android:id = "@+id/dialog_progress_pb_eternal"
        android:layout_width = "36dp"
        android:layout_height = "36dp"
        android:layout_centerInParent = "true"
        app:matProg_barColor = "@color/blue" />
</RelativeLayout>