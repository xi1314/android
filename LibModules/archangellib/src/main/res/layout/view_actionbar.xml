<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/widget_actionbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="18sp"/>

    <FrameLayout
        android:id="@+id/widget_actionbar_title_custom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <studio.archangel.toolkitv2.views.AngelMaterialLinearLayout
        android:id="@+id/widget_actionbar_arrow_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:minWidth="48dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:aml_color_background="@color/trans">

        <ImageView
            android:id="@+id/widget_actionbar_arrow"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/icon_actionbar_arrow"/>

        <TextView
            android:id="@+id/widget_actionbar_arrow_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:textSize="16sp"/>
        <!--<ImageView-->
        <!--android:id = "@+id/widget_actionbar_left_image"-->
        <!--android:layout_width = "wrap_content"-->
        <!--android:layout_height = "match_parent"-->
        <!--android:paddingLeft = "16dp"-->
        <!--android:paddingRight = "16dp"-->
        <!--android:scaleType = "centerInside"-->
        <!--android:visibility = "gone" />-->
    </studio.archangel.toolkitv2.views.AngelMaterialLinearLayout>

    <studio.archangel.toolkitv2.views.AngelMaterialRelativeLayout
        android:id="@+id/widget_actionbar_left_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:aml_color_background="@color/trans">

        <com.marvinlabs.widget.aspectratio.ConstrainedRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:fixedDimension="height">

            <ImageView
                android:id="@+id/widget_actionbar_left_image_content"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"/>
        </com.marvinlabs.widget.aspectratio.ConstrainedRelativeLayout>

    </studio.archangel.toolkitv2.views.AngelMaterialRelativeLayout>

    <studio.archangel.toolkitv2.views.AngelMaterialButton
        android:id="@+id/widget_actionbar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minHeight="24dp"
        android:minWidth="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text=""
        android:visibility="visible"
        app:aml_color_background="@color/trans"/>

    <FrameLayout
        android:id="@+id/widget_actionbar_left_custom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/trans"
        android:minHeight="24dp"
        android:minWidth="24dp"
        android:visibility="gone"/>

    <studio.archangel.toolkitv2.views.AngelMaterialButton
        android:id="@+id/widget_actionbar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:minHeight="24dp"
        android:minWidth="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text=""
        android:visibility="visible"
        app:aml_color_background="@color/trans"/>

    <studio.archangel.toolkitv2.views.AngelMaterialRelativeLayout
        android:id="@+id/widget_actionbar_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        app:aml_color_background="@color/trans">

        <com.marvinlabs.widget.aspectratio.ConstrainedRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:fixedDimension="height">

            <ImageView
                android:id="@+id/widget_actionbar_right_image_content"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_light_save"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"/>
        </com.marvinlabs.widget.aspectratio.ConstrainedRelativeLayout>
    </studio.archangel.toolkitv2.views.AngelMaterialRelativeLayout>

    <FrameLayout
        android:id="@+id/widget_actionbar_right_custom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/trans"
        android:minHeight="24dp"
        android:minWidth="24dp"
        android:visibility="gone"/>
</RelativeLayout>