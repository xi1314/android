<?xml version="1.0" encoding="utf-8"?>
<studio.archangel.toolkitv2.views.AngelMaterialRelativeLayout
	android:id = "@+id/view_tab_back"
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "48dp"
	app:aml_color_background = "@color/white"
	app:aml_trigger_mode = "start">

	<LinearLayout
		android:id = "@+id/view_tab_tmp1"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_centerInParent = "true"
		android:orientation = "vertical">

		<ImageView
			android:id = "@+id/view_tab_icon"
			android:layout_width = "14dp"
			android:layout_height = "14dp"
			android:layout_gravity = "center_horizontal"
			android:src = "@color/blue"/>

		<TextView
			android:id = "@+id/view_tab_text"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_gravity = "center_horizontal"
			android:layout_marginTop = "4dp"
			android:text = "Debug"
			android:textSize = "10sp"/>
	</LinearLayout>

	<RelativeLayout
		android:layout_width = "16dp"
		android:layout_height = "16dp"
		android:layout_alignTop = "@+id/view_tab_tmp2"
		android:layout_marginLeft = "-2dp"
		android:layout_marginTop = "-6dp"
		android:layout_toRightOf = "@+id/view_tab_tmp2">

		<!--<TextView-->
			<!--android:id = "@+id/view_tab_red_dot"-->
			<!--android:layout_width = "16dp"-->
			<!--android:layout_height = "16dp"-->
			<!--android:layout_centerInParent = "true"-->
			<!--android:background = "@drawable/shape_oval_red"-->
			<!--android:gravity = "center"-->
			<!--android:textColor = "@color/text_white"-->
			<!--android:textSize = "10sp"-->
			<!--android:visibility = "visible"/>-->

		<studio.archangel.toolkitv2.views.AngelRedDot
			android:id = "@+id/view_tab_red_dot"
			android:layout_width = "16dp"
			android:layout_height = "16dp"
			android:layout_centerInParent = "true"
			android:gravity = "center"/>
	</RelativeLayout>

	<studio.archangel.toolkitv2.views.AngelDivider
		android:id = "@+id/view_tab_divider"
		android:layout_width = "match_parent"
		android:layout_height = "1px"/>

	<View
		android:id = "@+id/view_tab_strip"
		android:layout_width = "match_parent"
		android:layout_height = "2dp"
		android:layout_alignParentBottom = "true"/>

	<Space
		android:id = "@+id/view_tab_tmp2"
		android:layout_width = "0dp"
		android:layout_height = "0dp"
		android:layout_alignTop = "@+id/view_tab_tmp1"
		android:layout_centerHorizontal = "true"/>
</studio.archangel.toolkitv2.views.AngelMaterialRelativeLayout>