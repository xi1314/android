<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_main_background">

        <ImageView
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/white_arrow"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <com.ogaclejapan.smarttablayout.SmartTabLayout
                android:id="@+id/activity_priletter_pager_tab"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                app:stl_clickable="true"
                app:stl_defaultTabBackground="@color/trans"
                app:stl_defaultTabTextAllCaps="false"
                app:stl_defaultTabTextColor="@color/white"
                app:stl_defaultTabTextHorizontalPadding="16dp"
                app:stl_defaultTabTextMinWidth="0dp"
                app:stl_defaultTabTextSize="15sp"
                app:stl_distributeEvenly="true"
                app:stl_dividerColor="@color/divider_normal"
                app:stl_dividerThickness="0dp"
                app:stl_drawDecorationAfterTab="false"
                app:stl_indicatorAlwaysInCenter="false"
                app:stl_indicatorColor="@color/white"
                app:stl_indicatorCornerRadius="1dp"
                app:stl_indicatorGravity="bottom"
                app:stl_indicatorInFront="true"
                app:stl_indicatorInterpolation="smart"
                app:stl_indicatorThickness="2dp"
                app:stl_indicatorWidth="52dp"
                app:stl_indicatorWithoutPadding="false"
                app:stl_overlineThickness="0dp"
                app:stl_titleOffset="24dp"
                app:stl_underlineColor="#dfdfdd"
                app:stl_underlineThickness="1px"/>
        </LinearLayout>

    </RelativeLayout>

    <com.remair.heixiu.giftview.NoScrollViewPager
        android:id="@+id/activity_priletter_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/char_color"/>
</LinearLayout>