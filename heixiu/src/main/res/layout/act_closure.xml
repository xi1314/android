<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/shape_button_white"
    android:padding="30dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/give_zuan"
        android:text="封禁主播"/>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/give_zuan"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="1、选择封禁原因"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/rb_baoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:padding="8dp"
            android:textColor="@color/gray"
            android:background="@drawable/shape_button_gray"
            android:textSize="16sp"
            android:text="色情暴力"/>

        <Button
            android:id="@+id/rb_gg"
            android:layout_toRightOf="@+id/rb_baoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:padding="8dp"
            android:textColor="@color/gray"
            android:background="@drawable/shape_button_gray"
            android:textSize="16sp"
            android:text="广告营销"/>

        <Button
            android:id="@+id/rb_zz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rb_baoli"
            android:padding="8dp"
            android:textColor="@color/gray"
            android:background="@drawable/shape_button_gray"
            android:textSize="16sp"
            android:text="政治敏感"/>

        <Button
            android:id="@+id/rb_qq"
            android:layout_toRightOf="@+id/rb_zz"
            android:layout_below="@+id/rb_gg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/gray"
            android:background="@drawable/shape_button_gray"
            android:textSize="16sp"
            android:text="侵犯版权"/>
    </RelativeLayout>

    <TextView
        android:textSize="16sp"
        android:textColor="@color/give_zuan"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:text="2、选择时间"/>

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/rb_three"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/gray"
            android:background="@drawable/shape_button_gray"
            android:textSize="16sp"
            android:text="3天"/>

        <Button
            android:id="@+id/rb_seven"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/rb_three"
            android:textColor="@color/gray"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_button_gray"
            android:textSize="16sp"
            android:text="7天"/>

        <Button
            android:id="@+id/rb_ever"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:layout_below="@+id/rb_three"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@drawable/shape_button_gray"
            android:textSize="16sp"
            android:text="永久"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="80dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_red"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="确定"/>
</LinearLayout>