<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@drawable/titlebar_bg">

    <ImageButton
        android:id="@+id/title_left_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon_actionbar_arrow"
        style="@style/titlebar_image_button_style"/>

    <ImageButton
        android:id="@+id/title_right_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/titlebar_image_button_style"
        android:visibility="invisible"/>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/frag_home_pager_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/title_left_image"
        android:layout_toLeftOf="@id/title_right_image"
        android:layout_toStartOf="@id/title_right_image"
        android:layout_toEndOf="@id/title_left_image"
        app:stl_clickable="true"
        app:stl_defaultTabBackground="@color/trans"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="@color/text_black"
        app:stl_defaultTabTextHorizontalPadding="6dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_defaultTabTextSize="15sp"
        app:stl_distributeEvenly="true"
        app:stl_dividerColor="@color/divider_normal"
        app:stl_dividerThickness="0dp"
        app:stl_drawDecorationAfterTab="false"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="@color/white"
        app:stl_indicatorCornerRadius="1dp"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInFront="true"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="2dp"
        app:stl_indicatorWidth="44dp"
        app:stl_indicatorWithoutPadding="true"
        app:stl_overlineThickness="0dp"
        app:stl_titleOffset="8dp"
        app:stl_underlineColor="@color/white"
        app:stl_underlineThickness="0px"/>
</RelativeLayout>
