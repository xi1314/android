<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="80dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    android:visibility="gone">

    <com.remair.heixiu.view.CircleProgressBar
        android:id="@+id/circleProgressbar"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_centerInParent="true"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/live_gift"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        app:placeholderImage="@drawable/placeholder"
        app:placeholderImageScaleType="fitXY"
        app:roundAsCircle="true"/>

    <com.remair.heixiu.giftview.StrokeTextView
        android:id="@+id/tv_lianchengcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:text=""
        android:textColor="@color/species_color"
        android:textSize="18sp"
        android:typeface="monospace"
        app:border_color="@color/pross_color"
        app:border_width="2dp"/>

    <LinearLayout
        android:id="@+id/ll_species"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/live_gift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_round_corner_live_trans_half"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_species_sma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/species_small"/>

        <TextView
            android:id="@+id/tv_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/species_color"
            android:textSize="10sp"/>
    </LinearLayout>
</RelativeLayout>