<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <include layout="@layout/common_title"/>

    <studio.archangel.toolkitv2.views.AngelDivider
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="14dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_change_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:maxLength="8"
            android:textColor="@color/text_name"
            android:textCursorDrawable="@drawable/shape_cursor_black"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/ig_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_close_black"/>
    </RelativeLayout>

    <studio.archangel.toolkitv2.views.AngelDivider
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_grey"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:text="@string/nick_hint"/>
</LinearLayout>