<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="244dp"
    android:layout_height="226dp"
    android:background="@drawable/shape_round_corner_chat_white">

    <ImageView
        android:id="@+id/image_finsh_log"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/close"/>

    <TextView
        android:id="@+id/tv_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:textColor="@color/label_title_color"
        android:textSize="20sp"
        android:text="亲爱的用户:"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="212dp"
        android:layout_height="84dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@color/gray_message"
        android:text="@string/message"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_below="@+id/tv_reminder"/>

    <studio.archangel.toolkitv2.views.AngelMaterialButton
        android:id="@+id/btn_attestation"
        android:layout_width="116dp"
        android:layout_height="38dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/tv_message"
        app:amb_text="立即认证"
        app:amb_text_color="@color/text_name"
        app:amb_text_size="17sp"
        app:aml_border="round"
        android:layout_centerHorizontal="true"
        app:aml_color_background="@color/hx_main"/>

    <LinearLayout
        android:id="@+id/ll_statu"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_message"
        android:visibility="gone">

        <studio.archangel.toolkitv2.views.AngelMaterialButton
            android:id="@+id/btn_see_progress"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:layout_below="@+id/tv_message"
            android:minHeight="42dp"
            app:amb_text="查看进度"
            app:amb_text_color="@color/text_name"
            app:amb_text_size="17sp"
            app:aml_border="round"
            android:layout_centerHorizontal="true"
            app:aml_color_background="@color/hx_main"/>

        <studio.archangel.toolkitv2.views.AngelMaterialButton
            android:id="@+id/btn_in_seeding"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tv_message"
            android:minHeight="42dp"
            app:amb_text="立即直播"
            app:amb_text_color="@color/text_name"
            app:amb_text_size="17sp"
            app:aml_border="round"
            android:layout_centerHorizontal="true"
            app:aml_color_background="@color/hx_main"/>

    </LinearLayout>

</RelativeLayout>

