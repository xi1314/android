<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:background="@drawable/shape_slide_gray"
            android:layout_width="36dp"
            android:layout_height="44dp">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_circle1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_circle_green"/>

            <TextView
                android:id="@+id/tv_num1"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:textColor="#81efae"
                android:text=""
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <FrameLayout
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_slide_gray"
            android:layout_width="36dp"
            android:layout_height="44dp">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_circle2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_circle_green"/>

            <TextView
                android:id="@+id/tv_num2"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:textColor="#81efae"
                android:text=""
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <FrameLayout
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_slide_gray"
            android:layout_width="36dp"
            android:layout_height="44dp">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_circle3"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_circle_green"/>

            <TextView
                android:id="@+id/tv_num3"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:textColor="#81efae"
                android:text=""
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <FrameLayout
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_slide_gray"
            android:layout_width="36dp"
            android:layout_height="44dp">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_circle4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_circle_green"/>

            <TextView
                android:id="@+id/tv_num4"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:textColor="#81efae"
                android:text=""
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/et_view"
        android:maxLength="4"
        android:background="@null"
        android:layout_gravity="center"
        android:cursorVisible="false"
        android:layout_width="180dp"
        android:paddingBottom="40dp"
        android:inputType="numberPassword"
        android:layout_height="match_parent"/>
</FrameLayout>