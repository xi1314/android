<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="54dp"/>

    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_page"
            style="@style/main_tab_bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/icon_home"
            android:text="首页"/>

        <RadioButton
            android:id="@+id/rb_findfragment"
            style="@style/main_tab_bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/icon_find"
            android:text="发现"/>

        <RadioButton
            android:id="@+id/rb_player"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/selector_oval_main"
            android:paddingBottom="6dp"/>

        <RadioButton
            android:id="@+id/rb_privatechat"
            style="@style/main_tab_bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/icon_private_letter"
            android:text="私聊"/>

        <RadioButton
            android:id="@+id/rb_main"
            style="@style/main_tab_bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/icon_mian"
            android:text="我的"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:orientation="horizontal"

        >
        <!-- 显示提醒信息的button android:layout_weight=1  是3个butto，平分手机界面的宽度-->
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:visibility="invisible"/>
        <!-- 占位置的button，以便适应不同分辨率手机 -->
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:visibility="invisible"/>
        <!-- 占位置的button，以便适应不同分辨率手机 -->
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/bt"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>