<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">
    <include
        android:id="@+id/title_layout"
        layout="@layout/common_title"/>
    <EditText
        android:id="@+id/et_fb_des"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_round_corner_chat_white"
        android:gravity="top"
        android:hint="请输入您的问题或建议(500字以内)"
        android:lineSpacingMultiplier="1.2"
        android:maxLength="500"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="10dp"
        android:textColor="@color/text_name"
        android:textCursorDrawable="@drawable/shape_cursor_white"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:text="请输入您的电话(方便我们进一步了解问题)" />

    <EditText
        android:id="@+id/et_fb_phone"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_round_corner_chat_white"
        android:hint="请输入电话"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="14dp"

        android:textCursorDrawable="@drawable/shape_cursor_white"
        android:textSize="13sp" />

    <studio.archangel.toolkitv2.views.AngelMaterialButton
        android:id="@+id/btn_commit"
        android:layout_width="318dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:minHeight="42dp"
        app:amb_text="提交"
        app:amb_text_color="@color/text_white"
        app:amb_text_size="17sp"
        app:aml_border="round"
        app:aml_color_background="@color/hx_main" />
</LinearLayout>