<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/common_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="26dp"
                    android:text="@string/certif_real_name"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:background="@null"
                    android:hint="@string/certif_et_name"
                    android:textColor="@color/text_name"

                    android:textSize="14sp"/>

                <studio.archangel.toolkitv2.views.AngelDivider
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="14dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="26dp"
                    android:text="@string/certif_card"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_identity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@+id/tv_identity"
                    android:background="@null"
                    android:digits="0123456789xX"
                    android:hint="@string/certif_et_card"
                    android:inputType="number"
                    android:numeric="integer"
                    android:textColor="@color/text_name"

                    android:textSize="14sp"/>

                <studio.archangel.toolkitv2.views.AngelDivider
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@+id/tv_identity"
                    android:layout_marginTop="14dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_caka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="26dp"
                    android:text="@string/certif_bank_card"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_caka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@+id/tv_caka"
                    android:background="@null"
                    android:hint="@string/certif_et_bankcard"
                    android:inputType="number"
                    android:textColor="@color/text_name"
                    android:textSize="14sp"/>

                <studio.archangel.toolkitv2.views.AngelDivider
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@+id/tv_caka"
                    android:layout_marginTop="14dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="26dp"
                    android:text="@string/certif_phone"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@+id/tv_phone"
                    android:background="@null"
                    android:hint="@string/certif_et_phone"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/text_name"
                    android:textSize="14sp"/>

                <studio.archangel.toolkitv2.views.AngelDivider
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@+id/tv_phone"
                    android:layout_marginTop="14dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="26dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_popte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/certif_id_card"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_mes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_popte"
                    android:text="@string/certif_hint_idcard"
                    android:textColor="@color/red"
                    android:textSize="13sp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="72dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rela_fornt"
                            android:layout_width="106dp"
                            android:layout_height="68dp"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:background="@drawable/dotted_line">

                            <LinearLayout
                                android:id="@+id/ll_front"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/btn_attestation_front"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/add_pic"/>

                                <com.remair.heixiu.giftview.StrokeTextView
                                    android:id="@+id/pload_fail_front"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/btn_attestation_front"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="6dp"
                                    android:text="@string/certif_faild"
                                    android:textColor="@color/red_color"
                                    android:textSize="10sp"
                                    android:visibility="gone"
                                    app:border_color="@color/white"
                                    app:border_width="2dp"/>
                            </LinearLayout>

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/item_show_front"
                                android:layout_width="96dp"
                                android:layout_height="58dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="4dp"
                                android:visibility="gone"
                                app:actualImageScaleType="centerCrop"
                                app:placeholderImage="@drawable/hand_id_card"
                                app:placeholderImageScaleType="fitXY"
                                app:viewAspectRatio="1.6"/>
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/btn_front_delete"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/delete_attestation"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/btn_front_sucess"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/upload_success"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rela_fornt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:text="@string/certif_font"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="72dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rela_back"
                            android:layout_width="106dp"
                            android:layout_height="68dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/dotted_line">

                            <LinearLayout
                                android:id="@+id/ll_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/btn_attestation"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/add_pic"/>

                                <com.remair.heixiu.giftview.StrokeTextView
                                    android:id="@+id/tv_back_fail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/btn_attestation"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="6dp"
                                    android:text="@string/certif_faild"
                                    android:textColor="@color/red_color"
                                    android:textSize="10sp"
                                    android:visibility="gone"
                                    app:border_color="@color/white"
                                    app:border_width="2dp"/>
                            </LinearLayout>

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/item_show_back"
                                android:layout_width="96dp"
                                android:layout_height="58dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="4dp"
                                android:visibility="gone"
                                app:actualImageScaleType="centerCrop"
                                app:placeholderImage="@drawable/hand_id_card"
                                app:placeholderImageScaleType="fitXY"
                                app:viewAspectRatio="1.6"/>
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/image_finsh_log"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/delete_attestation"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/btn_back_sucess"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/upload_success"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rela_fornt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:text="@string/certif_back"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="72dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rela_hand"
                            android:layout_width="106dp"
                            android:layout_height="68dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/dotted_line">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/btn_attestation_hand"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/add_pic"/>

                                <com.remair.heixiu.giftview.StrokeTextView
                                    android:id="@+id/tv_hand_mess"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/btn_attestation_front"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="6dp"
                                    android:text="@string/certif_faild"
                                    android:textColor="@color/red_color"
                                    android:textSize="10sp"
                                    android:visibility="gone"
                                    app:border_color="@color/white"
                                    app:border_width="2dp"/>
                            </LinearLayout>

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/item_show_hand"
                                android:layout_width="96dp"
                                android:layout_height="58dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="4dp"
                                android:visibility="gone"
                                app:actualImageScaleType="centerCrop"
                                app:placeholderImage="@drawable/hand_id_card"
                                app:placeholderImageScaleType="fitXY"
                                app:viewAspectRatio="1.6"/>
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/btn_hand_delete"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/delete_attestation"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/btn_hand_sucess"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/upload_success"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rela_fornt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:text="@string/certif_hand"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_submit_server"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp">

                <TextView
                    android:id="@+id/tv_reverse"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="@string/certif_id_card"
                    android:textColor="@color/label_title_color"
                    android:textSize="18sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/item_show_reverse"
                        android:layout_width="106dp"
                        android:layout_height="130dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        app:actualImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/hand_id_card"
                        app:placeholderImageScaleType="fitXY"
                        app:viewAspectRatio="1.6"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_show_reverse"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="@string/certif_hand_hint"
                        android:textColor="@color/red_count"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:text="@string/certif_tips"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/item_show_reverse"
                        android:textColor="@color/certification_color"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="34dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/turn_down"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_message_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/examine_fail"
                        android:textColor="@color/red_count"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_turn_case"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/certif_refuse"
                        android:textColor="@color/text_name"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:id="@+id/ll_reason1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:src="@drawable/bullet"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_reason1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textSize="11sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_reason2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:src="@drawable/bullet"/>

                        <TextView
                            android:id="@+id/tv_reason2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textSize="11sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <studio.archangel.toolkitv2.views.AngelMaterialButton
                android:id="@+id/btn_submit_attestation"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="24dp"
                app:amb_text="@string/certif_commit"
                app:amb_text_color="@color/text_white"
                app:amb_text_size="20sp"
                app:aml_border="round"
                app:aml_color_background="@color/hx_main"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>