<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/act_chat_gift_pad"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/white"
            android:visibility="visible">
            <TextView
                android:id="@+id/hint_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/hint_message"
                android:textColor="@color/greyish_white"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white">

            <com.remair.heixiu.giftview.GiftSelector
                android:id="@+id/act_chat_gift_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@color/white">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/ll_recharge"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:background="#00000000"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/recharge_diamond" />
                <TextView
                    android:id="@+id/act_chat_gift_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="0"
                    android:textColor="@color/greyish_white"
                    android:textSize="12sp" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/species_big" />
                <TextView
                    android:id="@+id/act_chat_species_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="0"
                    android:textColor="@color/greyish_white"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="充值"
                    android:textColor="@color/charge"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_in_recharge"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/icon_recharge" />

            </LinearLayout>

            <studio.archangel.toolkitv2.views.AngelMaterialButton
                android:id="@+id/act_chat_gift_send"
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:minHeight="28dp"
                app:amb_text="赠送"
                app:amb_text_color="@color/white"
                app:amb_text_size="12sp"
                app:aml_border="round_corner"
                app:aml_color_background="@color/hx_main"
                app:aml_color_foreground="#40D09F"
                app:aml_fill="border"
                app:aml_trigger_mode="start"></studio.archangel.toolkitv2.views.AngelMaterialButton>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>