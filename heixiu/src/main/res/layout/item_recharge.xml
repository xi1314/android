<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="105dp"
    android:layout_height="115dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="@drawable/item_recharge_bg">
    </TextView>

    <TextView
        android:id="@+id/chat_img_button"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/icon_under"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="20"
        android:textColor="#333333"
        android:textSize="13sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/icon_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:src="@drawable/first_recharge"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/chat_img"
        android:layout_width="78dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/diamond6"/>

    <TextView
        android:id="@+id/TextView_chat_img_button"
        android:layout_width="wrap_content"
        android:layout_below="@+id/chat_img"
        android:layout_height="wrap_content"
        android:background="@drawable/zuanshilvdi"
        android:minWidth="48dp"
        android:padding="3dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="-10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"/>

</RelativeLayout>
