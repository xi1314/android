<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="198dp"
        android:scaleType="matrix"
        android:src="@drawable/billlist_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/part_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/photo_two"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/shape_bill_grade_bg"
                android:padding="4dp"
                app:placeholderImage="@drawable/placeholder"
                app:placeholderImageScaleType="fitXY"
                app:roundAsCircle="true"/>

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/shape_bill_grade2"
                android:gravity="center"
                android:padding="2dp"
                android:text="2"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/value_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="0"
                android:textColor="@color/bill_bold"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="存在感"
                android:textColor="@color/give_zuan"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/part_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/photo_one"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:background="@drawable/shape_bill_grade_bg"
                android:padding="5dp"
                app:placeholderImage="@drawable/placeholder"
                app:placeholderImageScaleType="fitXY"
                app:roundAsCircle="true"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="-16dp"
                android:background="@drawable/shape_bill_grade1"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/value_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="0"
                android:textColor="@color/bill_bold"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="存在感"
                android:textColor="@color/give_zuan"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/part_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="68dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/photo_three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/shape_bill_grade_bg"
                android:padding="4dp"
                app:placeholderImage="@drawable/placeholder"
                app:placeholderImageScaleType="fitXY"
                app:roundAsCircle="true"/>

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/shape_bill_grade3"
                android:gravity="center"
                android:text="3"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/value_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="0"
                android:textColor="@color/bill_bold"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="存在感"
                android:textColor="@color/give_zuan"
                android:textSize="9sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="6dp"
        android:background="@color/grade_bg"/>
</RelativeLayout>