<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titlebar_title_text_style">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="titlebar_image_button_style">
        <item name="android:layout_width">@dimen/titlebar_image_button_widht
        </item>
        <item name="android:layout_height">@dimen/titlebar_image_button_height
        </item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/titlebar_image_button_padding
        </item>
        <item name="android:paddingRight">@dimen/titlebar_image_button_padding
        </item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="titlebar_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="blank_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawableTop">@drawable/blank_bg</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:visibility">visible</item>
    </style>
</resources>